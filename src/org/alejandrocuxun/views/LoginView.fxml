<AnchorPane id="AnchorPane" prefHeight="750.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.alejandrocuxun.controllers.LoginController">
   <children>
      <ImageView fitHeight="750.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/MenuLogin.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfUser" layoutX="65.0" layoutY="283.0" prefHeight="30.0" prefWidth="293.0" />
      <PasswordField fx:id="tfPassword" layoutX="65.0" layoutY="369.0" prefHeight="30.0" prefWidth="293.0" />
      <GridPane layoutX="73.0" layoutY="456.0" prefHeight="166.0" prefWidth="316.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btnIniciar" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="100.0" prefWidth="151.0" text="Iniciar" />
            <Button fx:id="btnRegistrar" layoutX="10.0" layoutY="43.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="100.0" prefWidth="151.0" text="Registrar" GridPane.columnIndex="1" />
